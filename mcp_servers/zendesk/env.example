# Zendesk MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Your Zendesk subdomain (e.g., if your Zendesk URL is https://company.zendesk.com, use "company")
ZENDESK_SUBDOMAIN=#

# Your Zendesk API token (get this from Zendesk Admin Center > Channels > API)
ZENDESK_API_TOKEN=#

# Your Zendesk email address (the email associated with your API token)
ZENDESK_EMAIL=#

# Optional: Port for the MCP server (default: 5000)
ZENDESK_MCP_SERVER_PORT=5000