# Freshdesk MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Freshdesk API key
FRESHDESK_API_KEY=your_api_key_here

# Required: Your Freshdesk domain (e.g., 'yourcompany' or 'yourcompany.freshdesk.com')
FRESHDESK_DOMAIN=yourcompany.freshdesk.com

# Optional: Port for the MCP server (default: 5000)
FRESHDESK_MCP_SERVER_PORT=5000

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO