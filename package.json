{
  "name": "klavis-ai",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mcp_servers/*"
  ],
  "scripts": {
    "lint": "eslint mcp_servers/**/*.ts",
    "lint:fix": "eslint mcp_servers/**/*.ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "lerna run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.5",
    "lint-staged": "^15.0.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
